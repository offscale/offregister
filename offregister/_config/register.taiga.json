{
  "name": "Taiga",
  "description": "Default register strategy",
  "version": "0.0.1",
  "provider": {
    "$ref": "env:OFFAUTH_JSON|offutils.str_from_file | json.loads"
  },
  "register": {
    "/unclustered/OpenEdX4": [
      {
        "module": "offregister-taiga",
        "kwargs": {
          "LISTEN_PORT": 443,
          "SERVER_NAME": "projects.offscale.io",
          "TAIGA_ROOT": "/var/www/taiga",
          "__GITHUB": {
            "client_id": "REPLACE_ME",
            "client_secret": {
              "$ref": "env:GITHUB_CLIENT_SECRET"
            }
          },
          "skip_migrate": false,
          "skip_nginx": true,
          "__remote_user": "samuel",
          "RDBMS_URI": {
            "$ref": "env:RDBMS_URI"
          }
        },
        "type": "fabric"
      }
    ]
  },
  "_comments": [
    {
      "module": "offregister-bootstrap",
      "type": "fabric"
    },
    {
      "module": "offregister-taiga",
      "kwargs": {
        "LISTEN_PORT": 443,
        "SERVER_NAME": "ec2-REPLACE_ME",
        "TAIGA_ROOT": "/var/www/taiga"
      },
      "type": "fabric"
    },
    {
      "module": "offregister-app-push",
      "cluster_name": "openedx-ginkgo.master.1",
      "kwargs": {
        "nginx_secure": "certbot",
        "https_cert_email": "EMAIL_ADDRESS_HERE"
      },
      "type": "fabric",
      "run_cmds": {
        "op": "in",
        "val": [
          "nginx_secure4"
        ]
      }
    },
    {
      "module": "offregister-bootstrap",
      "type": "fabric"
    },
    {
      "module": "offregister-app-push",
      "kwargs": {
        "GIT_DIR": "/var/www/static/certbot",
        "GIT_REPO": "https://github.com/SamuelMarks/hotel-kiosk-dist",
        "use_sudo": true,
        "node_sudo": false,
        "app_name": "ec2-REPLACE_ME",
        "NGINX_PORT": 80,
        "DESCRIPTION": "certbot frontend",
        "DNS_NAMES": [
          "ec2-REPLACE_ME.us-east-2.compute.amazonaws.com"
        ],
        "WWWROOT": "/var/www/static/certbot/dist",
        "WWWPATH": "/",
        "nginx": true
      },
      "type": "fabric"
    },
    {
      "module": "offregister-taiga",
      "kwargs": {
        "LISTEN_PORT": 443,
        "SERVER_NAME": "projects.fantom.foundation",
        "TAIGA_ROOT": "/var/www/taiga"
      },
      "type": "fabric"
    }
  ],
  "purpose": [
    "any-cluster"
  ],
  "etcd_server": "http://localhost:2379",
  "default_pick": "first"
}
