{
  "name": "Matrix",
  "description": "Default Matrix strategy",
  "version": "0.0.2-alpha",
  "provider": {
    "$ref": "env:OFFAUTH_JSON|offutils.str_from_file | json.loads"
  },
  "register": {
    "/unclustered/OpenEdX4": [
      {
        "module": "offregister-bootstrap",
        "type": "fabric"
      },
      {
        "module": "offregister-matrix",
        "kwargs": {
          "MATRIX_SERVER_NAME": "matrix.offscale.io",
          "SERVER_NAME": "comms.offscale.io",
          "clean_riot": false
        },
        "type": "fabric",
        "__run_cmds": {
          "op": "in",
          "val": [
            "configure_riot4"
          ]
        }
      },
      {
        "module": "offregister-certbot",
        "cluster_name": "offscale",
        "args": [],
        "kwargs": {
          "domains": [
            "comms.offscale.io",
            "matrix.offscale.io"
          ],
          "email": "EMAIL_ADDRESS_HERE",
          "redirect_block": true
        },
        "type": "fabric",
        "__run_cmds": {
          "op": "in",
          "val": [
            "apply_cert2"
          ]
        }
      }
    ]
  },
  "_comments": [
  ],
  "purpose": [
    "any-cluster"
  ],
  "etcd_server": "http://localhost:2379",
  "default_pick": "first"
}
